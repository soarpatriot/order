extends templates/master

block vars

block title
  | 手机号查询

block styles

block content
  .order-send 
    form(class="form-horizontal")
      .container
        .form-group
          label(class="col-xs-3 control-label") 寄件人： 
          .col-xs-9
            input(type="text",class="form-control")
        .form-group
          label(class="col-xs-3 control-label") 手机号： 
          .col-xs-9
            input(type="text",class="form-control")
        .form-group
          label(class="col-xs-3 control-label") 寄件地址： 
          .col-xs-9
            textarea(class="form-control",row="3")
        .form-group
          .col-xs-9
            a(href="#aa",class="btn btn-grey btn-block")
              span 从地址管理里添加
      .receive-part
        .container
          .form-group
            label(class="col-xs-3 control-label") 备注： 
            .col-xs-9
              textarea(class="form-control",row="3")
          .form-group.centered
            a(href="#fee-search",data-toggle="collapse",class="fee-link") 
              span 运费&实效查询
              i.fa.fa-angle-down
              i.fa.fa-angle-up.hidden
      #fee-search.collapse
        .container
          .form-group
            label(class="col-xs-3 control-label") 寄件人： 
            .col-xs-9
              input(type="text",class="form-control")
          .form-group
            label(class="col-xs-3 control-label") 手机号： 
            .col-xs-9
              input(type="text",class="form-control")
          .form-group
            label(class="col-xs-3 control-label") 寄件地址： 
            .col-xs-9
              textarea(class="form-control",row="3")
          .form-group
            .col-xs-9
              a(href="#aa",class="btn btn-grey btn-block")
                span 从地址管理里添加
        .weight-area
          .container
            .form-group
              label(class="col-xs-3 control-label") 预计重量： 
              .col-xs-9
                input(type="text",class="form-control",placeholder="kg")
            .summary-area
              .row 
                .col-xs-4
                  span 运费估计：
                  span 8元
                .col-xs-4 
                  span 预计时间：
                  span 2天
              p.small.text-muted.tip
                |  请输入收件人地址和重量为您估算价格
                br
                |  请输入收件地址为您估算到达时间

      .submit-area.container
        button(class="btn btn-danger btn-block") 提交订单
