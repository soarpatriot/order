
// all the big global in site
body
  font-size 14px
  background-color $grey-lighter

.index-page
  margin 50px auto

.logo 
  background-color $black
  padding 10px 0
  &-image
    width 25%
    max-width 120px
.locate
  padding 5px 0
  font-size 20px
  width 100%
  height 34px
  line-height 34px
  background-color $white
  border 1px solid #ccc
  &-icon
    margin-top -15px
    width 18px 
.input-form
  .form-label 
    padding-right 0
  .input-area
    padding-left 0




.btn-verify
    position absolute
    right 0
    top 0
 //change bootstrap 
.form-group
  relative()
.form-control 
  border-radius 0
.btn 
  border-radius 0
.panel 
  border-radius 0

.btn-danger 
  background-color $red
 
.btn-success 
  background-color $green

.panel-light 
  .panel-heading
    background-color $blue-lightest
  .panel-body 
    color $grey-dark-light
    
.panel-light-dark 
  .panel-heading
    background-color $blue-lightest
  .panel-body 
    color $black
 

.btn-grey
  button-variant($grey-dark-light, $grey-lighter, $btn-default-border)

.link-grey
  color $grey-dark-light
  +ActiveFocusHover()
    color darken($grey-dark-light, 10%)
