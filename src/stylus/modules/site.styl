.text-content 
  width 100%
  height 140px
  display table-cell
  text-align center
  vertical-align middle

.btn-grey
  button-variant($grey-dark-light, $grey-lighter, $btn-default-border)

.link-grey
  color $grey-dark-light
  +ActiveFocusHover()
    text-decoration none
    color darken($grey-dark-light, 10%)
.link-red
  color $red
  +ActiveFocusHover()
    text-decoration none
    color darken($red, 10%)
 
.link-blue
  color $blue
  +ActiveFocusHover()
    text-decoration none
    color darken($blue, 10%)

.text-green
  color $green
.text-red 
  color $red

